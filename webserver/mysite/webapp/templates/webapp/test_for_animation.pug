- t = 7

.globe(style='--t:' + str(2 * t + 1))
  .line.radius.h(style='--c:' + str(t))
  - for i in range(1, t)
    - c = t + i
    .line.h(style='--dp:' + str(i / t) + '; --s:-1; --c:' + str(c))
  - for i in range(1, t)
    - c = t - i
    .line.h(style='--dp:' + str(i / t) + '; --s:1; --c:' + str(c))
